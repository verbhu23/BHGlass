<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:paddingBottom="6.0dip"
        android:paddingLeft="48.0dip"
        android:paddingRight="38.0dip"
        android:paddingTop="10.0dip">

        <ImageView
            android:id="@+id/iv_thumbnail_sim"
            android:layout_width="90dip"
            android:layout_height="90dip"
            tools:src="@drawable/userimg" />

        <ProgressBar
            android:id="@+id/pb_sim_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="55.0dip"
            android:layout_height="10.0dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="8.0dip"
            android:layout_toStartOf="@+id/tv_face_sim"
            android:max="100"
            android:progressDrawable="@drawable/progress_img"
            tools:progress="68" />

        <TextView
            android:id="@+id/tv_face_sim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="88%"
            android:textColor="@color/vip_level_normal"
            android:textSize="@dimen/testSize18" />


    </RelativeLayout>


</FrameLayout>