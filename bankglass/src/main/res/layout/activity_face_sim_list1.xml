<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vip_list_bg"
    android:orientation="vertical">

    <include layout="@layout/glass_header_layout" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dip">

        <ImageView
            android:id="@+id/iv_img_crop"
            android:layout_width="160.0dip"
            android:layout_height="160.0dip"
            android:layout_gravity="center" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:background="@drawable/gradient" />

    <TextView
        android:id="@+id/tv_face_decet_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dip"
        android:text="2018-08-16 17.40.56"
        android:textColor="@color/vip_level_normal"
        android:textSize="@dimen/testSize14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:background="@drawable/gradient" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:layout_marginTop="15dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_total_sim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/vip_level_normal"
            android:textSize="@dimen/testSize12" />

        <TextView
            android:id="@+id/tv_sim_append"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个相似结果"
            android:textColor="@color/ratingbar_normal"
            android:textSize="@dimen/testSize12"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip">

        <ProgressBar
            android:id="@+id/pb_sim_list_loading"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/progress_rotate"
            android:visibility="visible" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_sim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fastScrollEnabled="true"
            android:paddingBottom="10.0dip"
            android:scrollbarStyle="insideInset"
            android:scrollbars="none"
            android:transcriptMode="normal" />

    </RelativeLayout>

</LinearLayout>
