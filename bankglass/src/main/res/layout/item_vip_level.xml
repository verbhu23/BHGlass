<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3.0dp"
    android:background="@drawable/bg_face_sim_vip"
    android:padding="3.0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:descendantFocusability="blocksDescendants"
        android:duplicateParentState="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="3.0dip">

        <ImageView
            android:id="@+id/record_iv_thumbnail"
            android:layout_width="76.0dip"
            android:layout_height="76.0dip"
            android:layout_margin="5.0dp"
            android:scaleType="center"
            tools:src="@drawable/pic_z" />

        <TextView
            android:id="@+id/tv_vip_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:maxLines="1"
            android:layout_marginStart="5.0dp"
            android:minWidth="55.0dp"
            android:textColor="@color/vip_level_normal"
            android:textSize="@dimen/testSize16" />

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/rat_vip_level"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18.0dip"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="0"
            android:theme="@style/RatingBar" />

        <TextView
            android:id="@+id/tv_vip_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:maxLines="1"
            android:textSize="@dimen/testSize14" />
    </LinearLayout>

</android.support.v7.widget.CardView>