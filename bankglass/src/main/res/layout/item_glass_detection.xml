<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5.0dip"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:duplicateParentState="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8.0dip">

        <ImageView
            android:id="@+id/record_iv_thumbnail"
            android:layout_width="90.0dp"
            android:layout_height="90.0dip"
            android:scaleType="centerCrop"
            android:src="@drawable/userimg" />

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/record_face_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:maxLines="1"
                    android:minWidth="55dip"
                    tools:text="刘德华"
                    android:textColor="@color/vip_level_normal"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/pg_sim_progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="10.0dip"
                        android:max="100"
                        tools:progress="56"
                        android:progressDrawable="@drawable/progress_img" />

                    <TextView
                        android:id="@+id/tv_face_sim_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="56%"
                        android:layout_marginLeft="3.0dip"
                        android:textColor="@color/vip_level_normal"
                        android:textSize="@dimen/testSize14" />

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_user_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15.0dip"
                android:background="@drawable/is_vip"
                android:visibility="gone" />

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>