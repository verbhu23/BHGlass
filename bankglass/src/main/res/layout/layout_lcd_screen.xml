<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff010101">
    <!--背景色必须是 #ff010101-->

    <LinearLayout
        android:id="@+id/tips_aera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_glass_tips_stroke"
        android:orientation="vertical"
        android:paddingBottom="5.0dip"
        android:paddingLeft="9.0dip"
        android:paddingRight="9.0dip"
        android:paddingTop="5.0dip"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_receive_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/testSize21"
            tools:text="如果我是" />

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/rat_vip_level"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:isIndicator="true"
            android:numStars="5"
            android:theme="@style/RatingBarLCD"
            android:visibility="gone"
            tools:rating="3" />

    </LinearLayout>


</RelativeLayout>
