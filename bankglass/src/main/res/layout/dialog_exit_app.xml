<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15.0dip"
        android:layout_marginTop="15.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="13.0dip"
        android:paddingRight="13.0dip"
        android:textColor="@color/add_camera_base_blue"
        android:textSize="@dimen/testSize18"
        tools:text="提示" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/add_camera_base_blue" />

    <TextView
        android:id="@+id/tv_title_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15.0dip"
        android:layout_marginTop="15.0dip"
        android:paddingLeft="13.0dip"
        android:paddingRight="13.0dip"
        android:textSize="@dimen/testSize16"
        tools:text="确定退出当前登录账号?" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffd9d9d9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48.0dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bind_email_tv_cancel"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_black_drak_style"
            android:textSize="@dimen/testSize16" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#ffd9d9d9" />

        <TextView
            android:id="@+id/bind_email_tv_ok"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="退出"
            android:textColor="@color/text_black_drak_style"
            android:textSize="@dimen/testSize16" />
    </LinearLayout>


</LinearLayout>