<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_current_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dip"
        android:layout_marginTop="3dip"
        android:gravity="center"
        android:maxLines="1"
        android:text="2018-10-25 11.23"
        android:textColor="@color/clr_black"
        android:textSize="12.0dip"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_join_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5.0dip"
        android:layout_marginTop="5.0dip"
        android:background="@drawable/bg_p"
        android:gravity="center"
        android:padding="5.0dip"
        android:text="AA-先生加入会话"
        android:textColor="@color/white"
        android:textSize="12.0dip"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5.0dip"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_marginTop="5.0dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/isdelete_tv"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_marginStart="10.0dip"
            android:background="@drawable/icon_unselected"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/chat_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="55.0dip"
            android:layout_marginStart="40.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_voice_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5.0dip"
                android:layout_marginEnd="5.0dip"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/testSize14"
                tools:text="15''" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5.0dip"
                android:background="@drawable/bg_chat_expert_session_client"
                android:gravity="center_vertical"
                android:minHeight="42.0dip"
                android:padding="8.0dip"
                android:textColor="#ff3280BF"
                android:textSize="@dimen/testSize16"
                tools:text="你收到我发的消息了吗?" />

            <ImageView
                android:id="@+id/iv_user_chat_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5.0dip"
                android:gravity="center"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_user_icon"
            android:layout_width="42.0dip"
            android:layout_height="42.0dip"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10.0dip"
            android:background="@drawable/default_user_icon" />
    </RelativeLayout>
</LinearLayout>