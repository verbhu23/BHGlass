<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_bg"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/clr_transparent_white_80" />

    <LinearLayout
        android:id="@+id/input_area"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/login_account_margin_top"
        android:orientation="vertical"
        android:paddingLeft="27.0dip"
        android:paddingRight="27.0dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/clr_login_frame_light" />

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/clr_login_frame_light" />

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/clr_login_input_bg"
                    android:hint="Email"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingBottom="13.0dip"
                    android:paddingLeft="16.0dip"
                    android:paddingRight="16.0dip"
                    android:paddingTop="13.0dip"
                    android:textSize="@dimen/testSize16" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/clr_login_frame_weight" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/clr_login_input_bg">

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.0"
                        android:background="@color/clr_login_input_bg"
                        android:hint="Password"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingBottom="13.0dip"
                        android:paddingLeft="16.0dip"
                        android:paddingRight="16.0dip"
                        android:paddingTop="13.0dip"
                        android:textSize="@dimen/testSize16" />

                    <ImageView
                        android:id="@+id/login_iv_showpassword"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:paddingRight="16.0dip"
                        android:src="@drawable/btn_password_gone" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/clr_login_frame_light" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_login"
            android:enabled="false"
            android:paddingBottom="13.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:paddingTop="13.0dip"
            android:text="Log in"
            android:textColor="@color/white"
            android:textSize="@dimen/testSize20" />

        <CheckBox
            android:id="@+id/login_cb_auto_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/checked_setup_style"
            android:drawablePadding="5.0dip"
            android:paddingLeft="0.0dip"
            android:paddingTop="5.0dip"
            android:text="Remember me"
            android:textColor="@color/clr_black"
            android:textSize="@dimen/testSize14"
            android:visibility="gone" />
    </LinearLayout>


</RelativeLayout>
